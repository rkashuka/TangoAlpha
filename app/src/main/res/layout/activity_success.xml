<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFDAB9"
    android:layout_height="match_parent">

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="430dp"
        android:id="@+id/Save"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Documentation"
        android:layout_width="150dip"
        android:layout_height="40dp"
        android:id="@+id/Documentation"
        android:layout_x="500dp"
        android:layout_y="15dp"
        android:fontFamily="sans-serif"
        android:textSize="21sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Name"
        android:layout_width="120dip"
        android:layout_height="40dp"
        android:id="@+id/Name"
        android:layout_x="125dp"
        android:layout_y="55dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Documentation" />

    <TextView
        android:text="Birthday"
        android:layout_width="120dip"
        android:layout_height="40dp"
        android:id="@+id/Birthday"
        android:layout_x="125dp"
        android:layout_y="95dp"
        android:textAlignment="center"
        android:layout_below="@+id/Name"
        android:layout_alignStart="@+id/Name"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="Diagnosis"
        android:layout_width="120dip"
        android:layout_height="40dp"
        android:id="@+id/Diag"
        android:layout_x="125dp"
        android:layout_y="135dp"
        android:textAlignment="center"
        android:layout_below="@+id/Birthday"
        android:layout_alignStart="@+id/Birthday" />

    <TextView
        android:text="Conversation..............."
        android:layout_width="280dip"
        android:layout_height="150dp"
        android:id="@+id/Conversation"

        android:textAlignment="center"
        android:layout_below="@+id/Diag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

</RelativeLayout>