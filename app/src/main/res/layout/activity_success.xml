<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFDAB9"
    android:layout_height="match_parent">

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="430dp"
        android:id="@+id/Save"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Birthday"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/Birthday"
        android:layout_x="125dp"
        android:layout_y="95dp"
        android:textAlignment="center"
        android:layout_below="@+id/Name"
        android:layout_alignStart="@+id/Name"
        android:layout_marginTop="16dp"
        android:textSize="20sp" />

    <TextView
        android:text="Conversation..............."
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/Conversation"

        android:textAlignment="viewStart"
        android:layout_below="@+id/Diag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textSize="20sp" />

    <TextView
        android:text="Diagnosis"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/Diag"
        android:layout_x="125dp"
        android:layout_y="135dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/Birthday"
        android:layout_alignStart="@+id/Birthday"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Documentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Documentation"
        android:layout_x="500dp"
        android:layout_y="15dp"
        android:fontFamily="sans-serif"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/Conversation"
        android:layout_marginEnd="31dp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/Name"
        android:layout_x="125dp"
        android:layout_y="55dp"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:layout_below="@+id/Documentation"
        android:layout_alignStart="@+id/Documentation"
        android:layout_marginStart="13dp" />

</RelativeLayout>